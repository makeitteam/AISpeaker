<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_highscore"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="sma.rhythmtapper.HighscoreActivity">


    <TableLayout
        android:stretchColumns="0,1,2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp">

            <TextView
                android:text="@string/highscore_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:textSize="18sp"
                android:textStyle="normal|bold" />

            <TextView
                android:text="@string/highscore_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:textSize="18sp"
                android:textStyle="normal|bold" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">

            <TextView
                android:text="@string/highscore_txt_easy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/highscore_txt_mode_easy" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/highscore_txt_score_easy"
                android:textColor="@android:color/black"
                android:textStyle="normal|bold"
                android:textSize="16sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">

            <TextView
                android:text="@string/highscore_txt_mid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/highscore_txt_mode_medium" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/highscore_txt_score_medium"
                android:textSize="16sp"
                android:textStyle="normal|bold"
                android:textColor="@android:color/black" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">

            <TextView
                android:text="@string/highscore_txt_hard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/highscore_txt_mode_hard" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/highscore_txt_score_hard"
                android:textSize="16sp"
                android:textStyle="normal|bold"
                android:textColor="@android:color/black" />

        </TableRow>
    </TableLayout>
</LinearLayout>
